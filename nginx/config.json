{
    "access_log": "/dev/stdout",
    "listeners": {
        "*:80": {
            "pass": "routes"
        },
        "*:443": {
            "pass": "routes",
            "tls": {
                "certificate": "bundle"
            }
        }
    },
    "routes": [
        {
            "match": {
                "uri": "/api/*"
            },
            "action": {
                "pass": "applications/backend"
            }
        },
        {
            "action": {
                "share": "/frontend/$uri",
                "fallback": {
                    "share": "/frontend/index.html"
                }
            }
        }
    ],
    "applications": {
        "backend": {
            "type": "python3",
            "path": "",
            "home": "/usr/local",
            "module": "backend.app",
            "callable": "app",
            "protocol": "asgi"
        }
    }
}